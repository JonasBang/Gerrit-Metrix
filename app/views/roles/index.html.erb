<h3>Roles</h3>
<div class="span8">
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Role</th>
    </tr>
  </thead>
  <tbody>
  <% @roles.each do |role| %>
    <tr>
      <td><%= role.name %></td>
      <td><% if role.name != 'admin' %>
            <%= link_to("Edit", edit_role_path(role), :class => 'btn btn-mini') %>
            <% if role.users.empty? %>
              <%= link_to("Delete", role_path(role), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') %>
            <% end %>
          <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Create new', new_role_path, :class => 'btn btn-primary' %>

</div>
